////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
rule "Daylight"                        
when
    Channel 'astro:sun:local:rise#event' triggered START 

then    
    {
    Daylight.sendCommand(ON)
    Twilight.sendCommand(OFF)
    }
end

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

rule "Twilight"                        
when
    Channel 'astro:sun:local:civilDusk#event' triggered START 

then    
    {
    Twilight.sendCommand(ON)
    Daylight.sendCommand(OFF)
       
    }
    end
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
