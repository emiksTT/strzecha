////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

rule "Ambilight turn on at sunset"
		when 

		    Time cron "0 0/5 * * * ?" //every 5 minutes check set ambilight
		    
		then
        if (SalonTVOnline.state == ON && Twilight.state == ON && Ambilight.state == OFF) 
		{
			Ambilight.sendCommand(ON)
			sendTelegram("redminote7", "TV Salon : Ambilight going ON")
			executeCommandLine("/etc/openhab2/scripts/AmbilightFollowVideo.sh")
		} 
		else
		    {
			Ambilight.sendCommand(OFF)
			sendTelegram("redminote7", "TV Salon : Ambilight going OFF")
			if (SalonTVOnline.state == ON && Twilight.state == OFF && Ambilight.state == ON){
            executeCommandLine("/etc/openhab2/scripts/AmbilightTurnOff.sh")
			}

		}
end

