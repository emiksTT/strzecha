///////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////
rule "Film"
when
    Item Film changed to ON 
then
    PhilipsTV_Power.sendCommand(ON)
    Yamaha_Power.sendCommand(ON)
    Salon_Barek_LED_Power.sendCommand(OFF)
    Salon_Lampa_LED_Power.sendCommand(OFF)
    PhilipsTV_Ambilight_Power.sendCommand(ON)
    Subwoofer_Power.sendCommand(ON)
    RoletaSalon.sendCommand(100)
    PhilipsTV_Ambilight_Hue_Power.sendCommand(ON)
    PhilipsTV_Mute.sendCommand(ON)
    Yamaha_Volume.sendCommand(50)
end
///////////////////////////////////////////////////////////////////////////////////////////////
rule "Film"
when
    Item Film changed to OFF 
then
    PhilipsTV_Ambilight_Hue_Power.sendCommand(OFF)
    PhilipsTV_Ambilight_Power.sendCommand(OFF)
    PhilipsTV_Power.sendCommand(OFF)
    Yamaha_Power.sendCommand(OFF)
    Subwoofer_Power.sendCommand(OFF)
    if (Dark.state == ON)
        {RoletaSalon.sendCommand(100)}
    else
        {RoletaSalon.sendCommand(0)}
end
