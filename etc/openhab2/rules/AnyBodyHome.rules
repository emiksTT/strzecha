    rule "Anybody Home"
    when
    	Item EmiksTelefonOnline changed			//Ping.items
		or
		Item NiuniaTelefonOnline changed		//Ping.items
    then
    	if (EmiksTelefonOnline.state == OFF && NiuniaTelefonOnline.state == OFF) {		//Ping.items
    		
    	    AnyBodyHome.sendCommand(OFF)	//Ararm.items
			AnyBodyHome_Date.sendCommand(new DateTimeType());		//Ararm.items
			//sendTelegram("redminote7", "Nie ma nikogo w domu!!!")
    		
    	} else {
    		
			AnyBodyHome.sendCommand(ON);		//Ararm.items
			AnyBodyHome_Date.sendCommand(new DateTimeType());		//Ararm.items
			//sendTelegram("redminote7", "Kto≈õ jest w domu!!!")
    	}
    end
